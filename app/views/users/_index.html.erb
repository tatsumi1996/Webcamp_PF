  
<table class='table'>
  <thead>
    <tr>
      <th>プロフィール画像</th>
      <th>ニックネーム</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
        <td><%= user.nickname %></td>
        <td><%= link_to '詳細', user_path(user), class: "btn btn-outline-secondary user_#{user.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class= "text-center"><%= paginate @users %></div>