<% provide(:title, "会員一覧") %>
<h2 class="head-line title_h2 text-center">会員一覧</h2>
<div class="container">
<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <table class="table table-hover table-bordered table-condensed">
      <thead>
        <tr class="info">
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td class="info col-xs-1">
              <%= user.id %>
            </td>
            <td class="text-left">
              <%= link_to admin_user_path(user), class: "btn-link"  do %>
                <i class="far fa-user"></i>
                <%= user.nickname %>
              <% end %>
            </td>
            <td class="text-left">
              <%= user.email %>
            </td>
            <td class="col-xs-2">
              <% if user.is_deleted == true%>
                <p><i class="fas fa-bullseye blue"></i>退会済</p>
              <% else %>
                <p><i class="fas fa-bullseye red"></i>有効</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
    <div class= "text-center"><%= paginate(@users) %></div>
</div>
</div>