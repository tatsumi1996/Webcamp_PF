<% provide(:title, "会員情報編集") %>
<div class="container">
<div class="row">
  <div calss="col-xs-12">
    <h2 class="head-line title_h2 text-center">
      <%= @user.nickname %>さんの会員情報編集
    </h2>

  <%= form_with(model: @user, url:admin_user_path, local: true ,method: :patch) do |f| %>

    <div class="col-xs-10">
      <div class="form-group col-xs-9">
        <%= f.label :"会員ID", class: "col-sm-4 control-label" %>
        <%= f.label :"#{@user.id}" %>
      </div>

      <div class="form-group col-xs-9">
        <%= f.label :"ニックネーム", class: "col-sm-4 control-label" %>
        <%= f.text_field :nickname, class: "col-sm-3 form-control-static name" %>　
      </div>
      
    <div class="form-group col-xs-9">
      <%= f.label :"メールアドレス", class: "col-sm-4 control-label" %>
      <%= f.text_field :email, class: "col-sm-6 form-control-static"%>
    </div>


      <div class="form-group col-xs-9">
        <%= f.label :"会員ステータス", class: "col-sm-4 control-label" %>
        　<%= f.radio_button :is_deleted, true %>
        　<%= f.label :is_deleted, "退会済", {value: :true, style: "display: inline-block;"} %>
        　<%= f.radio_button :is_deleted, false %>
        　<%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
      </div>
      
      
      
    </div>
      <div class="actions  col-xs-9 col-xs-offset-4">
        <%= f.submit '変更を保存する' ,class: "btn btn-primary" %>
      </div>
  <% end %>
    <div class="col-xs-12">
      <%= link_to "戻る", admin_user_path, class: "glyphicon glyphicon-home btn btn-info" %>
    </div>
  </div>
</div>
</div>