<div class='container'>
  <div class="row">
    <div class="col-xs-12">
      <h2 class="head-line title_h2 text-center" >ジャンル編集</h2>

      <div class="error_message">
        <% if @favorite_team.errors.any? %>
          <%= @favorite_team.errors.count %>件のerrorが発生しました
          <% @favorite_team.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
        <%= form_for @favorite_team, :url => {:action => :update} do |f| %>
        <div>
          <div class="form-group">
            <%= f.label :name, "球団名" %>
            <%= f.text_field :name %>
          </div>
          <div class="form-group">
            <%= f.label :image, "球団ロゴ" %>
            <%= f.attachment_field :image %>
          </div>
          <%= f.submit "変更を保存する", class: "btn btn-info" %>
        </div>
        <% end %>
        <br>
        <div class="col-xs-12">
          <%= link_to "戻る", admin_favorite_teams_path, class: "glyphicon glyphicon-home btn btn-info" %>
        </div>
      </div>
    </div>
  </div>
</div>