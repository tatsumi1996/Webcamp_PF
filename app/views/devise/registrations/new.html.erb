<div class="container">
 <h2 class="head-line title_h2 text-center">新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>
  <table class="table table-borderless">
  　<tr>
      <th><%= f.label :ニックネーム %></th>
      <td><%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>&emsp;</td>
    </tr>

    <tr>
      <th><%= f.label :メールアドレス %></th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr>

  　<tr>
     <th><%= f.label :"パスワード(6文字以上)" %></th>
    <td><%= f.password_field :password, autocomplete: "new-password" %></td>
    </tr>

  <tr>
    <th><%= f.label :"パスワード(確認)" %></th>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
  </tr>

  <tr>
    <th></th>
    <td><%= f.submit "新規登録", class:"btn btn-outline-dark" %></td>
  </tr>
<% end %>
</table>
  <div class="col text-center">
    <p><span>-----------------------------------------------</span> 既に登録されていますか？ <span>-----------------------------------------------</span></p>
    <%= link_to "ログイン", new_user_session_path, class:"btn btn-outline-info" %>
  </div>
</div>
