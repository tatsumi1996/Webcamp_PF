
<div class='container'>
  <div class="row">
    <div class="col-xs-12">
    <p id="notice"><%= notice %></p>

    <h1 class="head-line title_h2 text-center" >試合一覧</h1>

    <table>
      <thead>
        <tr>
          <th>タイトル</th>
          <th>概要</th>
          <th>開始時間</th>
          <th>終了時間</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.title %></td>
            <td><%= event.body %></td>
            <td><%= event.start_date.strftime('%Y年 %m月 %d日 %-H時%-M分') %></td>
            <td><%= event.end_date.strftime('%Y年 %m月 %d日 %-H時%-M分') %></td>
            <td><%= link_to '詳細', event, class: "btn btn-outline-secondary" %></td>
            <td><%= link_to '編集', edit_event_path(event), class: "btn btn-outline-info" %></td>
            <td><%= link_to '削除', event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to '日程を追加', new_event_path, class: "btn btn-outline-success" %>

    <div id="calendar"></div>
    </div>
  </div>
</div>