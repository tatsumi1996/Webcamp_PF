<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>ユーザ詳細</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">新規投稿</h2>
      <%= render 'form', support: @support_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2 class="head-line title_h2 text-center">応援投稿詳細</h2>
  		<table class='table'>
  		  <tr>
  		    <td><%= link_to user_path(@support.user) do %>
            <%= attachment_image_tag(@support.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
            <%= @support.user.nickname %>
            <% end %>
          </td>
          <td><%= link_to @support.title, support_path(@support) %></td>

          <td><p>コメント数：<%= @support.comments.count %></p></td>
          <td><%= @support.body %></td>
              <% if @support.user == current_user %>
          <td><%= link_to 'Edit', edit_support_path(@support), class: "btn btn-sm btn-success edit_support_#{@support.id}" %></td>
          <td><%= link_to 'Destroy', support_path(@support), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_support_#{@support.id}"%></td>
          <% end %>
        </tr>
      </table>
      <div class="comments">
        <% @comments.each do |comment| %>
          <table class='comment'>
            <tr>
              <td>
              <%= link_to user_path(comment.user) do %>
              <%= attachment_image_tag(comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
              <%= comment.user.nickname %>
              <% end %>
              </td>
              <td><%= comment.body %></td>
              <% if comment.user == current_user %>
              <td><%= link_to 'Destroy', support_comments_path(@support, @comment), method: :delete, class: "btn btn-sm btn-danger"%></td>
              <% end %>
            <% end %>
          </tr>
        </table>
      </div>

      <div class="new-comment">
        <%= form_with(model:[@support, @comment], local: true) do |f| %>
          <%= f.text_area :body, rows:'5' %>
          <%= f.submit "コメントを投稿", class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
  </div>
</div>